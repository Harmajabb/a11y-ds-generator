{
  "$schema": "https://biomejs.dev/schemas/2.3.10/schema.json",

  "assist": { "actions": { "source": { "organizeImports": "on" } } },

  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },

  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,

      "style": {
        "useConst": "warn"
      },

      "suspicious": {
        "noExplicitAny": "off"
      },

      "complexity": {
        "noForEach": "off"
      }
    }
  },

  "files": {
    "includes": ["**", "!**/node_modules", "!**/dist", "!**/build"]
  }
}
